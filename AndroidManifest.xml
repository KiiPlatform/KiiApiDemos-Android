<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kii.api_demos"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="com.kii.api_demos.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.kii.api_demos.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.kii.api_demos.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kii.api_demos.ShowCodeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kii.api_demos.analytics.FlexAnalyticsActivity"
            android:label="@string/flex_analytics"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.kii.api_demos.analytics.EventAnalyticsActivity"
            android:label="@string/event_analytics"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.kii.api_demos.geolocation.AddPOIActivity"
            android:label="@string/add_geopoint"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.kii.api_demos.geolocation.QueryByGeoBoxActivity"
            android:label="@string/query_pois_by_geobox"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.kii.api_demos.geolocation.QueryByGeoDistanceActivity"
            android:label="@string/query_pois_by_geodistance"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.kii.api_demos.file_storage.DownloadingFilesActivity"
            android:label="@string/title_activity_downloading_files"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.kii.api_demos.file_storage.FileBrowserActivity"
            android:label="@string/title_activity_file_browser"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.kii.api_demos.file_storage.PublishingFilesActivity"
            android:label="@string/title_activity_publishing_files"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.kii.api_demos.file_storage.UploadingFilesActivity"
            android:label="@string/title_activity_uploading_files"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.kii.api_demos.abtests.ABTestsActivity"
            android:label="@string/abtests_title"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kii.api_demos.object_storage.NotesList"
            android:label="@string/noteslist_title"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kii.api_demos.object_storage.NoteEditor"
            android:label="@string/new_note"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kii.api_demos.group_management.GroupManagementActivity"
            android:label="@string/group_management"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kii.api_demos.push.PushActivity"
            android:label="@string/push_notifications"
            android:screenOrientation="portrait" />
		<activity
            android:name="com.kii.api_demos.server_extension.ServerExtensionActivity"
            android:label="@string/server_extension"
            android:screenOrientation="portrait" />

        <activity android:name="com.kii.cloud.storage.social.twitter.KiiTwitterLoginActivity"/>
        <service android:name="com.kii.cloud.analytics.EventUploadService" />

        <receiver
            android:name="com.kii.api_demos.push.PushBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.kii.api_demos" />
            </intent-filter>
        </receiver>


        <service android:name="com.kii.api_demos.push.PushIntentService" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>